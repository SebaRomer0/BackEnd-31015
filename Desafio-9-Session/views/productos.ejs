<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Productos</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-striped text-center">
                    <h1>Tabla de Productos Cargados</h1>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                    <% console.log(data.length) %>
                        <% if (data.length==0) { %>
                            <h1>No hay Productos Cargados</h1>
                            <% } else { %>
                                <% data.forEach(element=> { %>
                                    <tr>
                                        <td>
                                            <%= element.id %>
                                        </td>
                                        <td>
                                            <%= element.name %>
                                        </td>
                                        <td>
                                            <%= element.price %>
                                        </td>
                                        <td>
                                            <%= element.url %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                </table>
                <a class="btn btn-primary" href="/">Ir al Formulario</a>
            </div>
        </div>

        <div class="row">
            <div class="col">

                <div class="card text-center">
                    <h2>Centro de Mensajes</h2>
                    <div class="card-body">
                        <p class="card-text"><h3>Puede Hablar con los distintos Usuarios Conectados</h3></p>
                    </div>
                    <div>
                        <input type="email" id="userEmail" placeholder="Ingrese su Email">
                        <input type="text" id="message" placeholder="Mensaje">
                        <button class="btn btn-primary" id="sendSocket">Enviar</button>
                    </div>
                    <div id="chat"></div>
                </div>
            </div>
        </div>


        <script src="/socket.io/socket.io.js"></script>
        <script src="../public/webSocket.js"></script>

</body>

</html>