<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Productos</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <h1>Productos</h1>  
            <div class="col-lg-12">
                <h2><%= mensajeInicial %></h2>
                <div class="row">
                    <% if (Productos.length==0) { %>
                        <h2>No hay Productos Cargados</h2>
                        <% } else { %>
                            <% Productos.forEach(element=> { %>
                                <div class="card text-center" style="width: 18rem;">
                                    <img class="card-img-top" src="../img/camisa1.jpeg" alt="Card image cap">
                                    <div class="card-body">
                                        <h3 class="card-title">
                                            <%= element.nombre %>
                                        </h3>
                                        <p class="card-text">
                                            <%= element.descripcion %>
                                        </p>
                                        <p class="card-text"> <strong>Codigo</strong> 
                                            <%= element.codigo %>
                                        </p>
                                        <p class="card-text"> <strong>Precio</strong> 
                                            <%= element.precio %> $
                                        </p>
                                        <p class="card-text"> <strong>Stock</strong> 
                                            <%= element.stock %>
                                        </p>
                                        <!-- <button type="submit" class="btn btn-primary p-3">Comprar</button> -->
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                </div>
            </div>
        </div>
            <!-- ver si aca va el enlace para carrito -->
            <a href="/api/carrito" class="btn btn-primary">Ir a la Seccion de Compra</a>
            
            <!-- Ver si mas tarde lo dejo en la pagina o lo coloco en la parte de carrito -->
            <!-- <a class="btn btn-primary" href="">Ir a los Productos</a> -->
        </div>
    </div>

</body>

</html>